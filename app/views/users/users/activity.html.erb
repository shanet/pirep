<%
  @title = 'Activity'
  @breadcrumbs = [['Users'], [public_user_label(@user), users_show_user_path(@user)], ['Activity']]
%>

<h1 class="display-6">Activity for <%= public_user_label(@user) %></h1>

<div class="row">
  <div class="col">
    <% if @actions.any? %>
      <%= render 'shared/users/all_activity', actions: @actions %>
      <%= render 'shared/pagination', records: @actions, path: :activity_user_path %>
    <% else %>
      <%= render 'shared/empty_view', label: 'No contributions exist.' %>
    <% end %>
  </div>
</div>
