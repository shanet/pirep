<%
  @title = 'Users'
  @breadcrumbs = [['Users']]
%>

<div class="row">
  <div class="col-8">
    <h1 class="display-6">All Users</h1>
  </div>

  <div class="col-4 d-flex flex-column">
    <%= render 'search_form' %>
  </div>
</div>

<% if @users.any? %>
  <%= render 'index_table' %>
  <%= render 'shared/pagination', records: @users, path: :manage_users_path %>
<% else %>
  <%= render 'shared/empty_view', label: 'No users exist.' %>
<% end %>
