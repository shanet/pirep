<% @breadcrumbs = [['Airports', manage_airports_path]] %>

<h1 class="display-6">All Airports</h1>

<% if @airports.any? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Code</th>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @airports.each do |airport| %>
        <tr>
          <td class="col"><%= link_to airport.short_id, manage_airport_path(airport) %></td>
          <td class="col"><%= airport.code %></td>
          <td class="col"><%= airport.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render 'shared/pagination', records: @airports, path: :manage_airports_path %>
<% else %>
  <%= render 'shared/empty_view', label: 'No airports exist.' %>
<% end %>
