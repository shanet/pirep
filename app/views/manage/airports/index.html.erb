<%
  @title = 'Airports'
  @breadcrumbs = [['Airports']]
%>

<div class="row">
  <div class="col-8">
    <h1 class="display-6">All Airports</h1>
  </div>

  <div class="col-4 d-flex flex-column">
    <%= render 'search_form' %>
  </div>
</div>

<% if @airports.any? %>
  <%= render 'index_table' %>
  <%= render 'shared/pagination', records: @airports, path: :manage_airports_path %>
<% else %>
  <%= render 'shared/empty_view', label: 'No airports exist.' %>
<% end %>
