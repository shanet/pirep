<%= form_with(model: (defined?(resource) && resource ? resource : Users::User.new), scope: :user, url: registration_path('user'), html: {id: 'registration-form'}, local: !(defined?(parent) && parent == :map)) do |form| %>
  <div class="alert alert-danger my-2">
    Thanks to piece of shit spammers, new account registration is temporarily disabled while more effective anti-spam measures are implemented.
  </div>

  <%= render 'shared/record_errors', record: form.object %>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, autofocus: true, autocomplete: 'email', id: 'registration-email', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: 'form-label' %>

    <% if @minimum_password_length %>
      <small class="fst-italic">(<%= @minimum_password_length %> characters minimum)</small>
    <% end %>

    <%= form.password_field :password, autocomplete: 'new-password', id: 'registration-password', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, class: 'form-label' %>
    <%= form.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :challenge, 'Anti-spam check: What three letter US government agency is responsible for regulating aviation?', class: 'form-label' %>
    <%= form.password_field :challenge, class: 'form-control' %>
  </div>

  <div class="text-center mb-3">
    <%= form.submit 'Sign up', disabled: true, class: 'btn btn-primary' %>
  </div>

  <div class="text-center">
    <%= render 'devise/shared/links', parent: (defined?(parent) ? parent : nil) %>
  </div>
<% end %>
