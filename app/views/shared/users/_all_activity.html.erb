<ul class="list-group my-3">
  <% actions.each do |action| %>
    <li class="list-group-item">
      <%
        link = action_link(action)
        next unless link
      %>

      <i class="<%= link[:icon] %>"></i> <%= link[:label] %>
      <br><small class="text-muted"><%= format_timestamp action.created_at %></small>
    </li>
  <% end %>
</ul>
