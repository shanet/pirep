<%
  is_manage = controller.class.name.start_with? 'Manage::'
%>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <%= link_to 'Pirep', root_path, class: 'navbar-brand' %>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if is_manage %>
          <li class="nav-item"><%= link_to 'Activity', manage_activity_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Airports', manage_airports_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Comments', manage_comments_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Users', manage_users_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'Jobs', GoodJob::Engine.routes.url_helpers.root_path, class: 'nav-link' %></li>
        <% elsif Manage::DashboardPolicy.new(current_user, nil).index? %>
          <li class="nav-item"><%= link_to 'Manage', manage_root_path, class: 'nav-link' %></li>
        <% end %>
      </ul>

      <span class="float-end"><%= link_to '<i class="fa-solid fa-right-from-bracket"></i> Logout'.html_safe, destroy_user_session_path, method: :delete, class: 'nav-link d-inline text-light' %></span>
    </div>
  </div>
</nav>
