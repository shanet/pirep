<%
  lines = []

  if weather_report.wind_speed == 0
    lines << 'Calm'
  else
    if weather_report.wind_direction == WeatherReport::WINDS_VARIABLE
      lines << 'Variable'
    else
      lines << "#{weather_report.wind_direction.to_s.rjust(3, '0')}&deg; @ #{weather_report.wind_speed}kt"
    end

    if weather_report.wind_gusts
      lines << ", gusts #{weather_report.wind_gusts}kt"
    end
  end
%>

<%= lines.join.html_safe %>
