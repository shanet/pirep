<% changes = diff(change.first, change.last) %>

<div class="card mb-5">
  <div class="card-header ps-1">
    <%= version_title(version, column) %>
  </div>

  <div class="row g-0">
    <div class="col-md-6">
      <div class="diff diff-removed p-1"><%= changes.left.html_safe %></div>
    </div>

    <div class="col-md-6 border-start">
      <div class="diff diff-added p-1"><%= changes.right.html_safe %></div>
    </div>
  </div>
</div>
