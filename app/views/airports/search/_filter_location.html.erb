<%= render 'airports/search/filter_header', title: 'Location', target: 'filter-group-location' %>

<% content_for :collapsible_content, flush: true do %>
  <div id="location" class="input-group">
    <span class="input-group-text">Within</span>
    <%= number_field_tag 'distance_from', nil, min: 1, max: 3000, placeholder: 100, autocomplete: :number, class: 'form-control flex-shrink-1' %>

    <span class="input-group-text">miles of</span>
    <%= text_field_tag 'airport_from', '', placeholder: 'KPAE', autocomplete: :text, class: 'form-control flex-grow-1' %>
  </div>
<% end %>

<%= render 'shared/collapsible', id: 'filter-group-location', classes: 'filter-group' %>
