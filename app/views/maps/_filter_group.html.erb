<a class="filter-group p-2 theme-red disabled" data-label="<%= title %>" data-filter-name="<%= filter_group %>" data-theme="red">
  <%= filter_icon('times') %>
</a>

<% filters.each do |filter_name, configuration| %>
  <a
    class="filter p-2 theme-<%= configuration[:theme] %>"
    data-label="<%= configuration[:label] %>"
    data-filter-name="<%= filter_name %>"
    data-filter-group="<%= filter_group %>"
    data-default-filter="<%= configuration[:default] %>"
    data-theme="<%= configuration[:theme] %>">
      <%= filter_icon(configuration[:icon]) %>
    </a>
<% end %>
