response = () => {
  let outdatedAt = document.querySelector('.comment[data-comment-id="<%= @comment.id %>"] .outdated-at');
  let flagOutdated = document.querySelector('.comment[data-comment-id="<%= @comment.id %>"] .flag-outdated');
  let date = outdatedAt.querySelector('.date');

  // Update the outdated at date, show the outdated at alert, and hide the flag button
  date.innerText = "<%= format_timestamp(@comment.outdated_at, format: '%B %-d, %Y') %>";
  outdatedAt.classList.remove('d-none');
  flagOutdated.classList.add('d-none');
};

response();
